# ============================================
# EJEMPLO DE CONFIGURACIÓN - .env
# ============================================
# Copia este archivo a .env y configura los valores reales
# NUNCA subas el archivo .env al repositorio

# ============================================
# SEGURIDAD (OBLIGATORIO)
# ============================================
# Genera con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=CAMBIAR_POR_UN_SECRET_SEGURO_MINIMO_32_CARACTERES

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000

# ============================================
# ALMACENAMIENTO
# ============================================
# Opciones: json (local) o cosmosdb (Azure)
STORAGE_MODE=json

# ============================================
# AZURE COSMOS DB (si STORAGE_MODE=cosmosdb)
# ============================================
COSMOS_ENDPOINT=https://tu-cuenta.documents.azure.com:443/
COSMOS_KEY=tu-cosmos-primary-key
COSMOS_DATABASE_NAME=capacitaciones_db

# ============================================
# AZURE BLOB STORAGE (Opcional para uploads)
# ============================================
# Descomenta si quieres usar Azure Blob en lugar de local
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_STORAGE_CONTAINER=uploads

# ============================================
# MICROSOFT ENTRA ID (Azure AD) - OBLIGATORIO
# ============================================
AZURE_CLIENT_ID=tu-application-client-id
AZURE_CLIENT_SECRET=tu-client-secret-value
AZURE_TENANT_ID=tu-tenant-id
AZURE_REDIRECT_URI=http://localhost:8000/api/auth/callback

# ============================================
# CONFIGURACIÓN ADICIONAL
# ============================================
ALLOWED_DOMAIN=@fundacionsantodomingo.org
TIMEZONE=America/Bogota
TOKEN_EXPIRATION_DAYS=30
