# Frontend URL
FRONTEND_URL=http://localhost:5173

# API
API_HOST=0.0.0.0
API_PORT=8000

# Microsoft Entra ID (Azure AD)
ENTRA_CLIENT_ID=your_client_id_here
ENTRA_TENANT_ID=your_tenant_id_here
ENTRA_REDIRECT_URI=http://localhost:5173/login
ENTRA_CLIENT_SECRET=

# Session Secret (OBLIGATORIO) - Genera uno con: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_SECRET=your_secret_key_here_minimum_32_characters

# Configuraci√≥n
ALLOWED_DOMAIN=@fundacionsantodomingo.org
TOKEN_EXPIRY_DAYS=30
MAX_FILE_SIZE=1048576

# Modo de almacenamiento: "json" o "cosmosdb"
STORAGE_MODE=json

# CosmosDB (solo si STORAGE_MODE=cosmosdb)
COSMOS_ENDPOINT=
COSMOS_KEY=
COSMOS_DATABASE_NAME=formaciones_db

# Modo de almacenamiento de blobs (QR, firmas): "local" o "azure"
# local = sistema de archivos local
# azure = Azure Blob Storage
BLOB_STORAGE_MODE=local

# Azure Blob Storage (solo si BLOB_STORAGE_MODE=azure)
# Formato: DefaultEndpointsProtocol=https;AccountName=xxx;AccountKey=xxx;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONNECTION_STRING=

